<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- Fill color of the circle -->
    <solid android:color="@color/tertiaryColor" /> <!-- You can adjust the color as needed -->
    <!-- Optionally, you can add a stroke (border) to the circle -->
    <stroke android:width="2dp" android:color="#6f4216" />
    <!-- Size of the button circle -->
    <size android:width="70dp" android:height="70dp" />
</shape>
